---
import { getCollection } from "astro:content";
import Default from "./Default.astro";

const quickstarts = await getCollection("quickstarts");
import { quickstartSections } from '../pages/quickstarts/quickstart-sections';

const sections = quickstartSections
  .map(qsSection=> ({
    title: qsSection.title,
    path: '#'+qsSection.anchorTag,
    icon: qsSection.faIcon,
    color: qsSection.color,
  }))
---
<Default sections={sections} sideMenu={[]} {...Astro.props}>
  <slot/>
</Default>
