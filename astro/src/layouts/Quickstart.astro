---
import { getCollection } from "astro:content";
import Default from "./Default.astro";

const quickstarts = await getCollection("quickstarts");
import { quickstartSections } from '../pages/quickstarts/quickstart-sections';
const sections = [];
for (const quickstart of quickstarts) {
  if (quickstart.id.indexOf("index.md") !== -1) {
    continue;
  }

  sections.push(
      {
        "title": quickstart.data.title,
        "path": `/quickstarts/${quickstart.slug}`,
        "icon": quickstart.data.faIcon,
        "color": quickstart.data.color
      }
  )
}
const qslinks = quickstartSections.flatMap(qsSection => qsSection.articles)
  .filter(article => !!article.href)
  .map(article => ({
    title: article.title,
    path: article.href,
    icon: article.faIcon,
    color: article.navColor,
  }))
---
<Default sections={qslinks} sideMenu={[]} {...Astro.props}>
  <slot/>
</Default>
