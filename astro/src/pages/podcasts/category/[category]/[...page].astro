---
import Layout from "../../../../layouts/BlogIndex.astro";
import { getStaticCategoryPaths, startCase } from "../../../blog/blog-tools";

export async function getStaticPaths({ paginate }) {
  return getStaticCategoryPaths(paginate, "podcasts");
}

const { page, categoryName } = Astro.props;
const { category } = Astro.params;
---

<Layout
  title={startCase(categoryName) + " podcasts"}
  section="category"
  sectionTitle="Podcast Categories"
  subjectRef={category}
  subjectName={categoryName}
  page={page}
  showCategories={false}
  type="podcasts"
/>
