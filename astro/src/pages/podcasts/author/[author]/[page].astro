---
import Layout from "../../../../layouts/BlogIndex.astro";
import { getStaticAuthorPaths } from "../../../blog/blog-tools";
import { AUTHORS } from "../../../blog/mappings";

export async function getStaticPaths({ paginate }) {
  return getStaticAuthorPaths(paginate, "podcasts");
}

const { page, authorName } = Astro.props;
const { author } = Astro.params;
console.log("author", author);
---

<Layout
  title={"Podcasts authored by " + authorName}
  section="author"
  sectionTitle="Podcasts By"
  subjectRef={author}
  subjectName={authorName}
  page={page}
  showCategories={true}
  personalLink={{
    text: AUTHORS[authorName]?.linkText,
    href: AUTHORS[authorName]?.linkUrl,
  }}
  type="podcasts"
/>
