---
import Layout from '../../../../../layouts/BlogIndex.astro';
import { getStaticTagPaths } from '../../../blog-tools';

export async function getStaticPaths({ paginate }) {
  return getStaticTagPaths(paginate);
}

const { page } = Astro.props;
const params = Astro.params;
---
<Layout section="tag"
        sectionTitle="Tags"
        subject={params.tag}
        page={page}
        showCategories={true}/>
