---
import Layout from "../../../../layouts/BlogIndex.astro";
import { getStaticTagPaths, startCase } from "../../blog-tools";

export async function getStaticPaths({ paginate }) {
  return getStaticTagPaths(paginate, "blog");
}

const { page, tagName } = Astro.props;
const { tag } = Astro.params;
---

<Layout
  title={startCase(tagName) + " posts"}
  section="tag"
  sectionTitle="Tags"
  subjectRef={tag}
  subjectName={tagName}
  page={page}
  showCategories={true}
  type="blog"
/>
