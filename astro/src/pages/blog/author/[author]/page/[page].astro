---
import Layout from '../../../../../layouts/BlogIndex.astro';
import { getStaticAuthorPaths } from '../../../blog-tools';

export async function getStaticPaths({ paginate }) {
  return getStaticAuthorPaths(paginate);
}

const { page } = Astro.props;
const params = Astro.params;
---
<Layout section="author"
        sectionTitle="Posts By"
        subject={params.author}
        page={page}
        showCategories={true}/>