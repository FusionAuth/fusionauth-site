---
import Layout from 'src/layouts/BlogIndex.astro';
import { getStaticAuthorPaths, AUTHORS } from 'src/tools/blog';

export async function getStaticPaths({ paginate }) {
  return getStaticAuthorPaths(paginate);
}

const { page, authorName } = Astro.props;
const { author } = Astro.params;
---
<Layout title={"Posts authored by " + authorName}
        section="author"
        sectionTitle="Posts By"
        subjectRef={author}
        subjectName={authorName}
        page={page}
        showCategories={true}
        personalLink={{text: AUTHORS[authorName]?.linkText, href: AUTHORS[authorName]?.linkUrl}}/>
