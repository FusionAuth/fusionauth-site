---
import Layout from 'src/layouts/Developer.astro';

const title = 'Cosmos Clown Store';
const description = 'You asked for clowns, you got them.';
---
<Layout {title} {description}>
  <section class="py-24">
  <div class="w-[540px] md:w-[720px] lg:w-[960px] xl:w-[1140px] mx-auto">
    <div class="mb-10 justify-center flex flex-row items-stretch flex-wrap">
        <img src="/img/landing/clownwear.jpg">
    </div>
    <div class="mb-10 justify-center flex flex-row items-stretch flex-wrap">
      <div class="flex-col justify-center items-center mx-auto">
        <h2 class="text-4xl my-4 font-semibold text-slate-600 text-center">
          Thanks for checking out this fake e-commerce store.
        </h2>
        <p class="text-center my-2">
          While we don't have any clownwear to sell, you do get bonus points for your attention to detail.
        </p>
        <p class="flex flex-row justify-center my-4">
          <a href="/download" class="bg-orange-500 px-6 py-3 rounded text-white font-semibold text-sm">DOWNLOAD FUSIONAUTH</a>
        </p>
      </div>
    </div>
  </div>
</section>
</Layout>

