---
import Layout from 'src/layouts/Docs.astro';
import { getDocNavContext, getStaticDocPaths } from 'src/pages/docs/doc-tools';

export const getStaticPaths = getStaticDocPaths('get-started/core-concepts/');

const navContext = await getDocNavContext(Astro);
const { entry } = Astro.props;
const { Content, headings } = await entry.render();
---
<Layout frontmatter={entry.data} {headings} {navContext}>
  <Content />
</Layout>
