---
import Layout from "../../../layouts/Quickstart.astro";
import { QuickstartGallery } from "../../../components/react/QuickstartGallery";
import { DataAPIClient, Collection } from "@datastax/astra-db-ts";

const ASTRA_DB_API_ENDPOINT = process.env["ASTRA_DB_API_ENDPOINT"];
const ASTRA_DB_APPLICATION_TOKEN = process.env["ASTRA_DB_APPLICATION_TOKEN"];

const client = new DataAPIClient(ASTRA_DB_APPLICATION_TOKEN);
const db = client.db(ASTRA_DB_API_ENDPOINT);

let collection = db.collection("examples_and_starters");
let documents = []
await collection.find({}).forEach((doc) => {
      documents.push(doc)
      })


const frontmatter = {disableTOC: true};
const title = "Quickstart Gallery";
const description = "Look at all the stuff we have!";

---
<Layout {frontmatter} {title} {description}>
  <QuickstartGallery docs={documents} client:load/>
</Layout>