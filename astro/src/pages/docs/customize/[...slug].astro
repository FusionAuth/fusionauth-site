---
import Layout from 'src/layouts/Docs.astro';
import { getStaticDocPaths } from 'src/pages/docs/doc-tools';
import { getDocNavContext } from '../doc-tools';

export const getStaticPaths = getStaticDocPaths('customize/');

const navContext = await getDocNavContext(Astro);
const { entry } = Astro.props;
const { Content, headings } = await entry.render();
---
<Layout frontmatter={entry.data} {headings} {navContext}>
  <Content />
</Layout>
