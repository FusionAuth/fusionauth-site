---
import Diagram from "../../../components/mermaid/SequenceDiagram.astro";
const { alt } = Astro.props;

//language=Mermaid
const diagram = `
sequenceDiagram

  participant migrator as Migration process
  participant newauthds as New Auth Datastore
  participant oldauthds as Old Auth Datastore
  migrator ->> oldauthds : User data, please
  oldauthds ->> migrator : Here's all the user data
  migrator ->> migrator : Transform, clean, verify user data
  migrator ->> newauthds : Here's all the user data
`;
---
<Diagram code={diagram} alt={alt}/>
