---
import Diagram from "../../../components/mermaid/SequenceDiagram.astro";
const { alt } = Astro.props;

//language=Mermaid
const diagram = `
sequenceDiagram

  participant h as HR Admin
  participant hs as HR System
  participant ccp as AWS
  participant scs as GitHub
  participant ppts as Ping Pong Tournament System
  
  Note over h,ppts: Employee Hired
  
  h ->>+ hs: Add user
  hs ->> ccp: Provision User
  hs ->> scs: Provision User
  hs ->>- ppts: Provision User

  Note over h,ppts: Time Passes
  
  h ->>+ hs : Remove user
  hs ->> ccp : Deprovision User
  hs ->> scs : Deprovision User
  hs ->>- ppts : Deprovision User
`;
---
<Diagram code={diagram} alt={alt}/>
