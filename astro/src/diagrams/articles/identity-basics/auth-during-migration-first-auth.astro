---
import Diagram from "../../../components/mermaid/SequenceDiagram.astro";
const { alt } = Astro.props;

//language=Mermaid
const diagram = `
sequenceDiagram

  actor user as User/Browser
  participant newauth as New Auth System
  participant newauthds as New Auth Datastore
  participant oldauth as Old Auth System
  participant oldauthds as Old Auth Datastore
  user ->> newauth : Provide credentials
  newauth ->> oldauth : Here are user credentials
  oldauth ->> oldauthds : Verify credentials
  oldauthds ->> oldauth : User data
  oldauth ->> newauth : User data
  newauth ->> newauthds : Store user data
  newauth ->> user : Authentication complete
`;
---
<Diagram code={diagram} alt={alt}/>
