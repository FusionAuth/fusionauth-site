---
import Diagram from "../../../../components/mermaid/FlowchartDiagram.astro";
const { alt } = Astro.props;

//language=Mermaid
const diagram = `
flowchart LR
subgraph FIDO2
    direction LR
    subgraph Authenticator
        direction TB
        AuthExamples["<b>Examples</b><br>fas:fa-key Yubikey<br>fas:fa-mobile Mobile Phone"]
    end
    subgraph Client
        direction TB
        API["WebAuthn API<br>In Browser"]
        ClientExamples["<b>Examples</b><br>fab:fa-chrome Google Chrome<br>fab:fa-edge Edge<br>fab:fa-safari Safari"]
    end
    subgraph RP[Relying Party]
        direction TB
        Server
    end
    API-. WebAuthn .-Server
    Authenticator-. CTAP .-API
end

style FIDO2 fill:#fff
style AuthExamples text-align:left
style ClientExamples text-align:left
`;
---
<Diagram code={diagram} alt={alt} id="diagram-webauthn-components" />
<style is:global>
    foreignObject > div {
      font-size: 13px;
      line-height: 1.6;
      transform: translateY(-4px);
    }
</style>