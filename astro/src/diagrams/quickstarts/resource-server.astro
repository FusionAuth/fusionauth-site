---
import Diagram from "../../components/mermaid/SequenceDiagram.astro";
const { alt } = Astro.props;

//language=Mermaid
const diagram = `
    sequenceDiagram
        participant Client
        participant App as Resource Server
        participant FusionAuth

        Client ->> App : GET /resource
        App ->> Client : 401 Not Authorized
        Client ->> FusionAuth : POST /api/login
        FusionAuth ->> Client : 200 Ok<br/>(token)
        Client ->> App : GET /resource
        App ->> Client : 200 Ok<br/>(resource) 
        `;
---
<Diagram code={diagram} alt="Resource Server Authentication with FusionAuth"/>