---
import Diagram from "../../components/mermaid/SequenceDiagram.astro";
const { alt = "Request flow during login before FusionAuth" } = Astro.props;

//language=Mermaid
const diagram = `
sequenceDiagram
    participant User
    participant App as Application

    User ->> App : View Homepage
    User ->> App : Click Login Link
    App ->> User : Show Login Form
    User ->> App : Fill Out and Submit Login Form
    App ->> App : Authenticates User
    App ->> User : Display User's Account or Other Info`;
---
<Diagram code={diagram} alt={alt}/>
