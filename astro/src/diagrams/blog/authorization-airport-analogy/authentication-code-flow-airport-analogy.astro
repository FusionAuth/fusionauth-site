---
import Diagram from "../../../components/mermaid/SequenceDiagram.astro";
const { alt } = Astro.props;

//language=Mermaid
const diagram = `
sequenceDiagram

participant Passenger as Passenger (User)
participant Airport as Airport (Client App)
participant TSA as TSA (Authorization Server)
participant Gate as Gate (Resource Server)

Passenger->>Airport: Enters Airport
Airport->>TSA: Sends passenger to TSA for ID check
Passenger->>TSA: Presents ID and flight info (credentials)
TSA-->>Passenger: Validates ID
Passenger->>Airport: Proceeds to Gate
Airport->>TSA: (Backchannel) Verifies boarding pass validity
TSA-->>Airport: Confirms boarding pass is valid
Airport->>Gate: User Presents boarding pass for access in the airport
Gate-->>Airport: Grants access to secured plane
`;
---
<Diagram code={diagram} alt={alt}/>
