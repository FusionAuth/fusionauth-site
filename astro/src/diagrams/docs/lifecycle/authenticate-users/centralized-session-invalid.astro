---
import Diagram from 'src/components/mermaid/SequenceDiagram.astro';

const { alt } = Astro.props;

//language=Mermaid
const code = `
sequenceDiagram
    participant Browser
    participant cb as ChangeBank
    participant cbf as ChangeBank Forum
    participant FusionAuth
    Browser ->> cb : Request Home Page
    cb ->> cb : Check Application Session Existence
    cb ->> FusionAuth : Check Validity Of Refresh Token
    FusionAuth ->> cb : Refresh Token Invalid
    cb ->> Browser : Redirect to FusionAuth Because There is No Valid Centralized Session
    Browser ->> FusionAuth : Request Login Page

`;

---
<Diagram {code} {alt} />

`;

---
<Diagram {code} {alt} />
