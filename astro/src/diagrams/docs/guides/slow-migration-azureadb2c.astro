---
import Diagram from "../../../components/mermaid/SequenceDiagram.astro";
const { alt } = Astro.props;

//language=Mermaid
const diagram = `
sequenceDiagram

actor user as User Agent
participant sys as New System
participant ad as Azure AD B2C

user ->> sys : Request login page
sys -->> user : Receive login page
user ->> sys : Post credentials
sys ->> ad : Post credentials
ad ->> ad  : Verify credentials
ad -->> sys : Return results of authentication, including user attributes
sys -->> user : Display results. If authentication successful, store user in New System.
`;
---
<Diagram code={diagram} alt={alt}/>
