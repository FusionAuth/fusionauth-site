---
import Diagram from 'src/components/mermaid/FlowchartDiagram.astro';

//language=Mermaid
const code = `
graph TB
    A(Users) --> B(Load Balancer)
    subgraph green [Green Deployment - new version]
        C(Node 1)
        D(Node 2)
        E(Node 3)
        style C fill:#C0F0C0
        style D fill:#C0F0C0
        style E fill:#C0F0C0
    end
    subgraph blue [Blue Deployment - old version]
        F(Node 1)
        G(Node 2)
        H(Node 3)
        style F fill:#add8e6
        style G fill:#add8e6
        style H fill:#add8e6
    end
    B --> |Switch traffic when ready|green
    B --> blue
`;
---
<Diagram {code} />

