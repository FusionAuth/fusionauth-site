---
import Diagram from 'src/components/mermaid/FlowchartDiagram.astro';

const { active }: { active: 'User' | 'Tenant'| 'Application' | 'Group' | 'Registration' | 'Role'} = Astro.props;

//language=Mermaid
const code = `
graph BT
    User --> Tenant
    Application --> Tenant
    Group --> Tenant
    Role --> Group
    Role --> Application
    User --> Group
    Registration --> User
    Registration --> Group
    User --> Role
    classDef big stroke-width:3px;
    class ${active} big
`;
---
<Diagram {code} />
<style is:global>
  foreignObject > div {
    transform: translateY(-4px);
  }
</style>
