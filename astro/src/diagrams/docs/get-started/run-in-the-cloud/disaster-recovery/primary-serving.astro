---
import Diagram from 'src/components/mermaid/FlowchartDiagram.astro';
const { alt } = Astro.props;
//language=Mermaid
const diagram = `
graph LR
subgraph "Internet"
  client[Client]
end
subgraph "Primary Region"
  client -->|Login Requests| primary[Primary Deployment]
end

subgraph "Secondary Region"
  primary -.->|DB Replicated| secondary[Secondary Deployment]
end

style primary fill:#0f0
style secondary fill:#98fb98
`;
---
<Diagram code={diagram} alt={alt}/>
