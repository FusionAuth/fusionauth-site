---
import Diagram from 'src/components/mermaid/FlowchartDiagram.astro';
const { alt } = Astro.props;
//language=Mermaid
const diagram = `
graph LR
subgraph "Internet"
  client[Client]
end

subgraph "Secondary Region"
  client -->|Login Requests| secondary[Secondary Deployment]
end

subgraph "Primary Region"
  primary[Primary Deployment]
end

style primary fill:#f00
style secondary fill:#0f0
`;
---
<Diagram code={diagram} alt={alt}/>
