---
import Diagram from 'src/components/mermaid/FlowchartDiagram.astro';
const { alt } = Astro.props;
//language=Mermaid
const diagram = `
graph TD
authenticatedentity(Authenticating people or machines/software) -- Machines --> m2m[Machine to machine]
authenticatedentity -- People --> b2borb2btox(End users belong to you or your customers?)
b2borb2btox -- Mine --> b2x(Have a suite of applications users can all use?)
b2x -- Yes --> appsuite[Application suite]
b2x -- No --> platformorauthasservice(Creating a platform with APIs that others apps use?)
platformorauthasservice -- No --> authasservice[Auth as a service]
platformorauthasservice -- Yes --> apiconsents[API user consents and delegated access]
b2borb2btox -- My customers --> b2b2x(Do customers own their users' identities?)
b2b2x -- No --> b2b2c[B2B2C]
b2b2x -- Yes --> b2b2eorbyoidp(Deploying your software into customer envts?)
b2b2eorbyoidp -- Yes --> byoidp[Identity broker]
b2b2eorbyoidp -- No --> b2b2e[B2B2E]
`;
---
<Diagram code={diagram} alt={alt}/>


