---
import Diagram from 'src/components/mermaid/FlowchartDiagram.astro';

const { alt } = Astro.props;

//language=Mermaid
const code = `  
graph LR
  subgraph app [App]
    direction BT
    2[Playwright tests] --> 1[App website]
    3[GitHub Action workflow] --> 2
  end

  subgraph auth [FusionAuth]
    direction TB
    4[FusionAuth Admin UI] --> 5[Database]
  end
  
  subgraph github [GitHub Action Marketplace]
     direction TB
     6[FusionAuth Action]
  end

  3 --> 6
  1 --> 4
`;

// add back the following lines when market place action published

---
<Diagram {code} alt={alt} />
<style is:global>
    foreignObject > div {
        transform: translateY(-4px);
    }
</style>
