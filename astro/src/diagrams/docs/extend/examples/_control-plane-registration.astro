---
import Diagram from 'src/components/mermaid/SequenceDiagram.astro';

const { alt } = Astro.props;

//language=Mermaid
const diagram = `
sequenceDiagram

participant Browser
participant pp as Pied Piper Video Chat
participant f as FusionAuth

Browser ->> pp : Registers
Browser ->> pp : Submit tenant creation form
pp ->> pp : Creates tenant object
pp ->> f : Creates needed configuration
pp ->> f : Create optional configuration
pp -->> Browser : Tenant configuration details
`;
---
<Diagram code={diagram} alt={alt}/>
