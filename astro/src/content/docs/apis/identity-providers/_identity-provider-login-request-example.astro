---
import JSON from 'src/components/JSON.astro';

const {show_code_and_token_examples, idp_request} = Astro.props;

---

{ show_code_and_token_examples && <JSON title="Example Request JSON using code and redirect_uri" src={"identity-providers/login/" + idp_request + "-code-request.json"} /> }

{ show_code_and_token_examples && <JSON title="Example Request JSON using token" src={"identity-providers/login/" + idp_request + "-token-request.json"} /> }

{ !show_code_and_token_examples && <JSON title="Example Request JSON" src={"identity-providers/login/" + idp_request + "-request.json"} /> }
