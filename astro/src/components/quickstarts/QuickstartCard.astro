---
const { description, footer, href, icon, title, comingSoon } = Astro.props;
---
<a href={href} class={
  "border border-solid block rounded-lg " +
  (comingSoon
    ? "border-slate-300 dark:border-slate-700"
    : "border-slate-500 dark:bg-slate-900 bg-white dark:hover:bg-slate-800 group hover:bg-slate-100 hover:border-indigo-500 ")
}>
    <div class="flex items-center items-start gap-x-6 px-5 py-3">
      {icon && <img class={"h-12 " + (comingSoon ? "opacity-40": "")} src={icon} alt={title}>}
        <div>
            <h3 class={ "font-semibold group-hover:text-indigo-500 text-xl sm:leading-tight sm:text-lg md:text-xl lg:text-1xl 1xl:leading-tight " + (comingSoon ? "text-slate-400" : "" ) }>
                { comingSoon ? title + ' * Coming Soon' : title }
            </h3>
        </div>
    </div>
</a>