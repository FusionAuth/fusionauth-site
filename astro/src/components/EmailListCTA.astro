  <form action="https://fusionauth.us1.list-manage.com/subscribe/post?u=e49fa3727e80f8a81984ec45e&amp;id=82607f973e" method="POST" target="_blank">
    <input style="padding:5px" type="text" name="EMAIL" size="10" placeholder="Email address" required=""><br><br>
    <div data-pg-name="cta-orange-btn-div" class="bg-[#F5821F] bg-blend-normal border-2 border-solid border-white flex font-bold h-12 min-w-full mix-blend-normal place-content-center place-items-center relative rounded shadow-black shadow-sm text-sm text-white uppercase">
