const { intro } = Astro.props;
---
<div class="bg-gradient-to-b flex flex-col from-gray-900 overflow-hidden pb-10 place-content-center place-items-center pt-8 px-8 relative rounded-lg to-blue-900 w-72 z-20" data-pg-name="sidebar-cta">
  <img src="/img/cta/social-login.png" class="-bottom-20 absolute left-5 opacity-10 w-32 z-0"/>
  <img src="/img/cta/orange-shield.svg" class="absolute opacity-30 right-8 top-6 w-11"/>
