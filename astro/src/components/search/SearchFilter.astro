---
interface Props {
  filters: { [key: string]: string[] };
}

const { filters }: Props = Astro.props;
---
{filters && Object.entries(filters).flatMap(([key, values]) => values.map(value => ([key, value]))).map(([key, value]) =>
    <meta name={`search-criteria:${key}`} content={value} data-pagefind-filter={`${key}[content]`}> )}
