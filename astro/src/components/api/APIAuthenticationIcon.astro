---
const { classList, title, type } : {
  classList: [],
  title?: string,
  type: ['api-key' | 'basic' | 'client-credentials' | 'jwt' | 'local-bypass' | 'none'],
} = Astro.props;

const authenticationTypes = {
  'api-key': 'fa-solid fa-sharp fa-lock text-red-800',
  'basic': 'fa-solid fa-sharp fa-shield-halved text-red-700',
  'client-credentials': 'fa-passport fas text-red-700',
  'jwt': 'fa-id-badge fas text-blue-700',
  'local-bypass':  'fa-solid fa-sharp fa-server text-blue-800',
  'none': 'fa-solid fa-sharp fa-unlock text-green-700'
}
---
<i class:list={[classList, authenticationTypes[type]]} {title}/>
