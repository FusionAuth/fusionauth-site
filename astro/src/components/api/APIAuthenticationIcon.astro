---
interface Props {
  classList?: [],
  title?: string,
  type: 'api-key' | 'basic' | 'client-credentials' | 'jwt' | 'local-bypass' | 'none',
}

const { classList = [], title, type }: Props = Astro.props;

const authenticationTypes = {
  'api-key': {src: '/img/icons/api/api-key-authentication.svg', alt: 'API Key Authentication'},
  'basic': {src: '/img/icons/api/basic-authentication-api-key.svg', alt: 'Basic Authentication using an API Key'},
  'client-credentials': {src: '/img/icons/api/client-credentials.svg', alt: 'Client Credentials'},
  'jwt': {src: '/img/icons/api/jwt-authentication.svg', alt: 'JWT Authentication'},
  'local-bypass': {src: '/img/icons/api/localhose-authentication-bypass.svg', alt: 'Localhost Authentication Bypass'},
  'none': {src: '/img/icons/api/no-authentication-required.svg', alt: 'No Authentication Required'},
};

const auth = authenticationTypes[type];
if (!auth) {
  throw new Error(`Could not find auth type for ${type}`);
}
---
<img width="28px" class:list={[...classList, 'inline my-0']} src={authenticationTypes[type].src} alt={authenticationTypes[type].alt}/>