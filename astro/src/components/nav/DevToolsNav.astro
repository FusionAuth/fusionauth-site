---
import Nav from './ComposableNav.astro';

const categoryItems = [
  {name: 'Online Base64 Encoder & Decoder', href: '/dev-tools/base64-encoder-decoder/'},
  {name: 'Online Date and Time Utilities', href: '/dev-tools/date-time'},
  {name: 'Online JWT Decoder', href: '/dev-tools/jwt-decoder'},
  {name: 'Online URL Encoder & Decoder', href: '/dev-tools/url-encoder-decoder'},
  {name: 'Online UUID Generator', href: '/dev-tools/url-encoder-decoder'},
];

const moreItems = [
  {name: 'Quickstarts', href: '/docs/quickstarts'},
  {name: 'SDKs', href: '/docs/sdks'},
  {name: 'Downloads', href: '/download'},
  {name: 'Blog', href: '/blog/'},
  {name: 'API Docs', href: '/docs/apis'},
  {name: 'Release Notes', href: '/docs/release-notes'},
  {name: 'Articles', href: '/articles/'},
  {name: 'Docs', href: '/docs/'},
];

