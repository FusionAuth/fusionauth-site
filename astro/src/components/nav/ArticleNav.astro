---
import Nav from './ComposableNav.astro';

const categoryItems = [
  {name: 'AI', href: '/articles/ai'},
  {name: 'Authentication', href: '/articles/authentication'},
  {name: 'Login & Auth Workflows', href: '/articles/login-authentication-workflows'},
  {name: 'CIAM', href: '/articles/ciam'},
  {name: 'Gaming & Entertainment', href: '/articles/gaming-entertainment'},
  {name: 'Identity Basics', href: '/articles/identity-basics'},
  {name: 'OAuth', href: '/articles/oauth'},
  {name: 'Security', href: '/articles/security'},
  {name: 'Tokens', href: '/articles/tokens'},
];

const moreItems = [
  {name: 'Quickstarts', href: '/docs/quickstarts'},
  {name: 'SDKs', href: '/docs/sdks'},
  {name: 'Downloads', href: '/download'},
  {name: 'Docs', href: '/docs/'},
  {name: 'API Docs', href: '/docs/apis'},
  {name: 'Release Notes', href: '/docs/release-notes'},
  {name: 'Blog', href: '/blog/'},
  {name: 'Developer Tools', href: '/dev-tools/'},
];

const buttons: {key: string, mobile?: boolean}[] = [
  {key: 'divider'},
  {key: 'dark-mode', mobile: true},
  {key: 'search', mobile: true},
  {key: 'login'},
  {key: 'expert'},
];
---
<Nav sectionTitle="Articles"
     sectionTitleHref="/articles/"
     categoryLabel="Articles Categories"
     categoryItems={categoryItems}
     moreItems={moreItems}
     buttons={buttons}
     colorThemeOverride="dark"
     noSideNav={true} />
