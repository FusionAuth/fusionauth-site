---
const { description, footer, href, icon, title} = Astro.props;
---
<a href={href} class="bg-gradient-to-b bg-white border-2 border-slate-200 flex flex-col from-white group items-center pb-10 pt-6 px-3 rounded shadow to-blue-50/75 hover:border-indigo-500">
  {icon && <img src={icon} alt={title}>}
  <h3 class="font-bold mt-5 text-lg text-slate-800 group-hover:text-indigo-500">{title}</h3>
  {description &&
    <p class="mt-3 text-center text-slate-600 text-sm">
      {description}
    </p>
  }
  {footer &&
    <p class="mt-4 text-slate-500 text-xs">
      {footer}
    </p>
  }
</a>
