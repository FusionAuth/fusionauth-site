---
const { className, id, label, name, required, value } = Astro.props;
---
<div class:list={["flex items-start no-prose", className || ""]}>
  <div class="flex items-center h-5">
    <label class="cursor-default flex-shrink-0 h-5 inline-flex items-center justify-center relative w-10">
      <input id={id} type="checkbox" name={name} value={value || ""} class="peer absolute appearance-none bg-transparent border-none h-5 rounded w-10 checked:border-0 checked:bg-transparent checked:focus:bg-transparent checked:hover:bg-transparent dark:focus:ring-offset-slate-900 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-offset-white focus:ring-indigo-500"/>
      <span class="peer-checked:bg-indigo-500 absolute bg-gray-200 duration-200 ease-in-out h-4 mx-auto pointer-events-none rounded-full transition-colors w-9 dark:bg-gray-600"></span>
      <span class="peer-checked:translate-x-5 absolute bg-white border border-gray-200 duration-200 ease-in-out h-5 inline-block left-0 pointer-events-none ring-0 rounded-full shadow transform transition-transform translate-x-0 w-5 dark:bg-gray-600 dark:border-gray-400"></span>
    </label>
  </div>
  <div class="ml-3 pt-1 text-sm">
    <label for={id} class="block font-medium leading-none text-sm mb-1">
      {label}
      {required && "*"}
    </label>
  </div>
</div>
