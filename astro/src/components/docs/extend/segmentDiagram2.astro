---
import Diagram from 'src/components/mermaid/FlowchartDiagram.astro';

const { alt } = Astro.props;

//language=Mermaid
const code = `
graph LR
  X(Segment)
  Y[(PostgreSQL)]
  subgraph I[Your server]
    subgraph G[Docker]
      H[(PostgreSQL)]
    end
    subgraph C[Docker]
      A(FusionAuth)
    end
    subgraph E[Docker]
      B(Filtering web service)
    end
    subgraph J[Docker]
      F(Your app)
    end
  end
  D(User)
  D --> F
  D --> A
  C --> G
  F --> A
  A --> |Webhook| B
  B --> |API call| X
  X --> Y
  style I fill:#999
  style X fill:#944
  style E fill:#944
  style Y fill:#944
`;
---
<Diagram {code} alt={alt} />
<style is:global>
    foreignObject > div {
        transform: translateY(-4px);
    }
</style>