---
import Diagram from 'src/components/mermaid/FlowchartDiagram.astro';

const { alt } = Astro.props;

//language=Mermaid
const code = `
graph LR
  X(Slack)
  subgraph I[Your server]
    subgraph G[Docker]
      H[(PostgreSQL)]
    end
    subgraph C[Docker]
      A(FusionAuth)
    end
    subgraph E[Docker]
      B(Custom web service monitor)
    end
    subgraph J[Docker]
      F(Your app)
    end
  end
  D(🧑‍💻 User)
  K(👩‍🚒 Administrator)
  D --> F
  D --> A
  C --> G
  F --> A
  B --> |API call| C
  B --> |API call| X
  K --> X
  style I fill:#999
  style E fill:#944
  style X fill:#944
`;
---
<Diagram {code} alt={alt} />
<style is:global>
    foreignObject > div {
        transform: translateY(-4px);
    }
</style>