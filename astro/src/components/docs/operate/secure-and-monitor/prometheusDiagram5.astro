---
import Diagram from 'src/components/mermaid/FlowchartDiagram.astro';

const { alt } = Astro.props;

//language=Mermaid
const code = `
graph LR
  D(User)
  N(Ntfy.sh)
  subgraph I[Your server]
    subgraph G[Docker]
      H[(PostgreSQL)]
    end
    subgraph C[Docker]
      A(FusionAuth)
    end
    subgraph P[Docker]
      Q(Loki)
    end
    subgraph E[Docker]
      B(Prometheus)
    end
    subgraph K[Docker]
      L(AlertManager)
    end
    subgraph J[Docker]
      F(Your app)
    end
    subgraph M[Docker]
      O(Grafana)
    end
  end
  D --> J
  D --> C
  C --> G
  F --> C
  E --> |Prometheus pulls metrics from FusionAuth| C
  E --> K
  K --> N
  M --> E
  P --> |Loki stores logs from FusionAuth| C
  E --> |Prometheus reads Loki logs| P
  style I fill:#999
  style E fill:#944
  style K fill:#944
  style N fill:#944
  style M fill:#944
  style P fill:#944
`;
---
<Diagram {code} alt={alt} />
<style is:global>
    foreignObject > div {
        transform: translateY(-4px);
    }
</style>