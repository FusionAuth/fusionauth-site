---
import Diagram from 'src/components/mermaid/FlowchartDiagram.astro';

const { alt } = Astro.props;

//language=Mermaid
const code = `
graph LR
  D(User)
  subgraph I[Your server]
    subgraph G[Docker]
      H[(PostgreSQL)]
    end
    subgraph C[Docker]
      A(FusionAuth)
    end
    subgraph E[Docker]
      B(Prometheus)
    end
    subgraph J[Docker]
      F(Your app)
    end
  end
  D --> J
  D --> C
  C --> G
  F --> C
  E --> |Prometheus pulls metrics from FusionAuth| C
  style I fill:#999
  style E fill:#944
`;
---
<Diagram {code} alt={alt} />
<style is:global>
    foreignObject > div {
        transform: translateY(-4px);
    }
</style>