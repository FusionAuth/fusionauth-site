<select id="release-notes-version" class="select border-2 border-gray-300 focus-ring-indigo-300 h-10" style="width: 100%;">
</select>

<slot />

<script>
  var options = '';
  var elements = document.querySelectorAll('h2.release-note');

  for (var i = 0; i < elements.length; i++) {
    var element = elements[i];
    options += '<option value="' + element.id + '">' + element.innerHTML.trim() + '</option>\n';
  } 

  var select = document.getElementById('release-notes-version');
  select.insertAdjacentHTML('beforeend', options);
  select.addEventListener('change', function() {
    window.location.hash = select.options[select.selectedIndex].value;
  });
</script>

