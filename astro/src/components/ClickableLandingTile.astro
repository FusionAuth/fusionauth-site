---
const { description, footer, href, icon, title} = Astro.props;
---
<a href={href} class="bg-gradient-to-b bg-white border-2 border-slate-200 flex from-white group items-start px-3 py-5 rounded shadow space-x-4 to-blue-50/75 hover:border-indigo-500">
  {icon && <img src={icon} alt={title}>}
  <div>
    <h3 class="font-bold text-md text-slate-800 group-hover:text-indigo-500">{title}</h3>
    {description &&
      <p class="mt-3 text-slate-600 text-xs">
        {description}
      </p>
    }
    {footer &&
      <p class="mt-4 text-slate-500 text-xs">
        {footer}
      </p>
    }
  </div>
</a>
