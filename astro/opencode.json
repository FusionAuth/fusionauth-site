{
  "$schema": "https://opencode.ai/config.json",
  "tools": {
    "chroma-memory*": false,
    "fusionauth-api-server*": false,
    "fusionauth-info*": false
  },
  "agent": {
    "chroma-memory": {
      "mode": "all",
      "prompt": "{file:./.agents/chroma-memory.md}",
      "description": "Chroma Memory Agent - this agent will handle remembering things using ChromaDB. Use it to store and retrieve information as needed.",
      "tools": {
        "chroma-memory*": true,
        "read": true,
        "grep": true,
        "glob": true,
        "list": true,
        "todowrite": true,
        "todoread": true,
        "webfetch": true
      }
    },
    "fusionauth-api-server": {
      "mode": "all",
      "prompt": "{file:./.agents/fusionauth-api.md}",
      "description": "FusionAuth API Server Agent - this agent will interact with the FusionAuth API server to manage users, applications, and other resources.",
      "tools": {
        "fusionauth-api-server*": true,
        "read": true,
        "write": true,
        "grep": true,
        "glob": true,
        "list": true,
        "webfetch": true
      }
    },
    "fusionauth-info": {
      "mode": "all",
      "prompt": "{file:./.agents/fusionauth-info.md}",
      "description": "FusionAuth Information Agent - this agent will provide information about FusionAuth, including documentation, best practices, and troubleshooting tips.",
      "tools": {
        "fusionauth-info*": true,
        "read": true,
        "grep": true,
        "glob": true,
        "list": true,
        "webfetch": true
      }
    },
    "shot-orchestrator": {
      "mode": "all",
      "prompt": "{file:./.agents/shot-orchestrator.md}",
      "description": "Orchestrator Agent - this agent will coordinate the actions of other agents to accomplish complex tasks related to FusionAuth and ChromaDB.",
      "tools": {
        "read": true,
        "write": true,
        "grep": true,
        "glob": true,
        "list": true,
        "todowrite": true,
        "todoread": true,
        "webfetch": true
      }
    },
    "task-loop-agent": {
      "mode": "all",
      "prompt": "{file:./.agents/task-loop-agent.md}",
      "description": "Task Loop Agent - this agent will manage and execute tasks in a loop, ensuring that all necessary steps are completed efficiently.",
      "tools": {
        "bash": true,
        "read": true,
        "write": true,
        "grep": true,
        "glob": true,
        "list": true,
        "todowrite": true,
        "todoread": true,
        "webfetch": true
      }
    }
  },
  "mcp": {
    "chroma-memory": {
      "type": "local",
      "command": [
        "uvx",
        "chroma-mcp"
      ]
    },
    "fusionauth-api-server": {
      "type": "local",
      "command": [
        "npm",
        "run",
        "--silent",
        "--prefix",
        "/Users/xxx/dev/inversoft/fusionauth/fusionauth-mcp-api/packages/mcp-api",
        "start"
      ],
      "environment": {
        "API_KEY_APIKEYAUTH": "xxx",
        "API_BASE_URL": "http://localhost:9011"
      }
    },
    "fusionauth-info": {
      "type": "local",
      "command": [
        "npx",
        "mcp-remote",
        "https://test-mcp-server.dan-12a.workers.dev/sse"
      ]
    },
    "playwright": {
      "type": "local",
      "command": [
        "npx",
        "@playwright/mcp@latest"
      ]
    }
  }
}
