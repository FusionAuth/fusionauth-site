<!DOCTYPE html>
<html lang="en">
<head>
  {% include _head.liquid %}
  <script type="application/ld+json">
    {
      "@context": "https://schema.org/",
      "@type": "BreadcrumbList",
      "itemListElement": [{
        "@type": "ListItem",
        "position": 1,
        "name": "Expert Advice",
        "item": "https://fusionauth.io/learn/expert-advice/"
      },{
        "@type": "ListItem",
        "position": 2,
        "name": "{{ page.category }}",
        "item": "https://fusionauth.io/learn/expert-advice/{{ page.category | slugify }}/"
      }]
    }
  </script>
</head>
<body>
{% include _header.liquid hero=false section="developer" %}
<main>
  <section class="white">
    <div class="container">
      <div class="row center">
        <div class="col-xs-12 col-lg-7 centered">
          <h1>{{ page.title }}</h1>
          <p>
            {{ page.description }}
          </p>
        </div>
      </div>
      <div class="row">
      {% if page.markdown == 1 %}
        {{ content | markdownify }}
      {% else %}
        {{ content }}
      {% endif %}
      </div>
    </div>
  </section>
  <section class="white">
    <div class="container">
      {% include _resources.liquid %}
    </div>
  </section>
  {% include _built-for-devs.liquid %}
</main>
{% include _footer.liquid %}
</body>
</html>
