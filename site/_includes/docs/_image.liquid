{% if include.figure %}
<figure class="{{ include.class }}" style="{{ include.style }}">
  <img src="{{ include.src }}" alt="{{ include.alt }}"/>
  <figcaption class="figure-caption">{{ include.alt }}</figcaption>
</figure>
{% else %}
<img src="{{ include.src }}" alt="{{ include.alt }}" class="{{ include.class }}" style="{{ include.style }}"/>
{% endif %}